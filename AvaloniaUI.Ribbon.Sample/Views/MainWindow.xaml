                  </Rectangle.OpacityMask>
                </Rectangle>
              </ribbon:RibbonButton.Icon>
            </ribbon:RibbonButton>
            <ribbon:RibbonButton Content="Button 2" MinSize="Medium" ToolTip.Tip="Button 2" ribbon:KeyTip.KeyTipKeys="B">
