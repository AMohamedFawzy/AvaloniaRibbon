              </ribbon:RibbonDropDownButton.Icon>
              <ribbon:RibbonDropDownItem>Item 1</ribbon:RibbonDropDownItem>
              <ribbon:RibbonDropDownItem>Item 2</ribbon:RibbonDropDownItem>
            </ribbon:RibbonDropDownButton>
            <ribbon:RibbonDropDownButton ToolTip.Tip="Small" MinSize="Small" MaxSize="Small">
