                    <Rectangle Width="16" Height="16" Fill="Green"/>
                  </ribbon:GalleryItem.Icon>
                </ribbon:GalleryItem>
                <ribbon:GalleryItem Content="Item 8">
                  <ribbon:GalleryItem.Icon>
                    <Rectangle Width="16" Height="16" Fill="Turquoise"/>
                  </ribbon:GalleryItem.Icon>
                </ribbon:GalleryItem>
                <ribbon:GalleryItem Content="Item 9">
                  <ribbon:GalleryItem.Icon>
                    <Rectangle Width="16" Height="16" Fill="Cyan"/>
                  </ribbon:GalleryItem.Icon>
                </ribbon:GalleryItem>
                <ribbon:GalleryItem Content="Item 10">
                  <ribbon:GalleryItem.Icon>
                    <Rectangle Width="16" Height="16" Fill="SkyBlue"/>
                  </ribbon:GalleryItem.Icon>
                </ribbon:GalleryItem>
                <ribbon:GalleryItem Content="Item 11">
                  <ribbon:GalleryItem.Icon>
                    <Rectangle Width="16" Height="16" Fill="Blue"/>
                  </ribbon:GalleryItem.Icon>
                </ribbon:GalleryItem>
                <ribbon:GalleryItem Content="Item 12">
                  <ribbon:GalleryItem.Icon>
                    <Rectangle Width="16" Height="16" Fill="BlueViolet"/>
                  </ribbon:GalleryItem.Icon>
                </ribbon:GalleryItem>
              </ribbon:Gallery>
            </ribbon:RibbonGroupBox>
          </ribbon:RibbonTab.Groups>
        </ribbon:RibbonTab>
        <ribbon:RibbonTab Header="Invisible tab" IsVisible="False"/>
        <ribbon:RibbonContextualTabGroup Header="Contextual Group 1" Background="Red" IsVisible="{Binding ShowContextualGroup1}">
          <ribbon:RibbonTab Header="Test A" ribbon:KeyTip.KeyTipKeys="T">
            <ribbon:RibbonTab.Groups>
              <ribbon:RibbonGroupBox Header="Test Group" Command="{Binding OnClickCommand}" ribbon:KeyTip.KeyTipKeys="D1">
                <ribbon:RibbonButton Content="On" MinSize="Large" ToolTip.Tip="On" ribbon:KeyTip.KeyTipKeys="A">
                  <ribbon:RibbonButton.LargeIcon>
                    <ControlTemplate>
                      <Panel Width="32" Height="32">
                        <Ellipse Stroke="{Binding $parent[Button].Foreground}" StrokeThickness="4" Margin="2,4,2,0">
                          <Ellipse.Clip>
                            <PathGeometry>
                              <PathFigure StartPoint="0,0" IsClosed="True">
                                  <LineSegment Point="8,0"/>
                                  <LineSegment Point="8,11"/>
                                  <LineSegment Point="19,11"/>
                                  <LineSegment Point="19,0"/>
                                  <LineSegment Point="28,0"/>
                                  <LineSegment Point="28,28"/>
                                  <LineSegment Point="0,28"/>
                              </PathFigure>
                            </PathGeometry>
                          </Ellipse.Clip>
                        </Ellipse>
                        <Rectangle Width="4" Margin="0,0,0,9" Fill="{Binding $parent[Button].Foreground}"/>
                      </Panel>
                    </ControlTemplate>
                  </ribbon:RibbonButton.LargeIcon>
                  <ribbon:RibbonButton.QuickAccessIcon>
                    <ControlTemplate>
                      <Panel Width="16" Height="16">
                        <Ellipse Stroke="{Binding $parent[Button].Foreground}" StrokeThickness="2" Margin="1,2,1,0">
                          <Ellipse.Clip>
                            <PathGeometry>
                              <PathFigure StartPoint="0,0" IsClosed="True">
                                  <LineSegment Point="4,0"/>
                                  <LineSegment Point="4,6"/>
                                  <LineSegment Point="10,6"/>
                                  <LineSegment Point="10,0"/>
                                  <LineSegment Point="14,0"/>
                                  <LineSegment Point="14,14"/>
                                  <LineSegment Point="0,14"/>
                              </PathFigure>
                            </PathGeometry>
                          </Ellipse.Clip>
                        </Ellipse>
                        <Rectangle Width="2" Margin="0,1,0,5" Fill="{Binding $parent[Button].Foreground}"/>
                      </Panel>
                    </ControlTemplate>
                  </ribbon:RibbonButton.QuickAccessIcon>
                </ribbon:RibbonButton>
                <ribbon:RibbonButton Content="Off" MinSize="Large" ToolTip.Tip="Off" ribbon:KeyTip.KeyTipKeys="B">
                  <ribbon:RibbonButton.LargeIcon>
                    <ControlTemplate>
                      <Panel Width="32" Height="32">
                        <Ellipse Stroke="{Binding $parent[Button].Foreground}" StrokeThickness="4"/>
                        <Rectangle Width="4" Margin="0,9" Fill="{Binding $parent[Button].Foreground}"/>
                      </Panel>
                    </ControlTemplate>
                  </ribbon:RibbonButton.LargeIcon>
                  <ribbon:RibbonButton.QuickAccessIcon>
                    <ControlTemplate>
                      <Panel Width="16" Height="16">
                        <Ellipse Stroke="{Binding $parent[Button].Foreground}" StrokeThickness="2"/>
                        <Rectangle Width="2" Margin="0,4" Fill="{Binding $parent[Button].Foreground}"/>
                      </Panel>
                    </ControlTemplate>
                  </ribbon:RibbonButton.QuickAccessIcon>
                </ribbon:RibbonButton>
              </ribbon:RibbonGroupBox>
            </ribbon:RibbonTab.Groups>
          </ribbon:RibbonTab>
          <ribbon:RibbonTab Header="Test B" ribbon:KeyTip.KeyTipKeys="Q">
            <ribbon:RibbonTab.Groups>
              <ribbon:RibbonGroupBox Header="Group" Command="{Binding OnClickCommand}" ribbon:KeyTip.KeyTipKeys="D1">
                <ribbon:RibbonButton Content="Yes" MinSize="Large" ToolTip.Tip="Yes" ribbon:KeyTip.KeyTipKeys="Y" QuickAccessIcon="{Binding Icon, RelativeSource={RelativeSource Mode=Self}}">
                  <ribbon:RibbonButton.LargeIcon>
                    <ControlTemplate>
                      <Path Data="M 1 15 L 10 24 L 30 4" Width="32" Height="32" StrokeThickness="4" Stroke="{Binding $parent[Button].Foreground}"/>
                    </ControlTemplate>
                  </ribbon:RibbonButton.LargeIcon>
                  <ribbon:RibbonButton.Icon>
                    <ControlTemplate>
                      <Path Data="M 0.5 7 L 5 11.5 L 15 1.5" Width="16" Height="16" StrokeThickness="2" Stroke="{Binding $parent[Button].Foreground}"/>
                    </ControlTemplate>
                  </ribbon:RibbonButton.Icon>
                </ribbon:RibbonButton>
                <ribbon:RibbonButton Content="No" MinSize="Large" ToolTip.Tip="No" ribbon:KeyTip.KeyTipKeys="N" QuickAccessIcon="{Binding Icon, RelativeSource={RelativeSource Mode=Self}}">
                  <ribbon:RibbonButton.LargeIcon>
                    <ControlTemplate>
                      <Path Data="M 2 2 L 30 30 M 30 2 L 2 30" Width="32" Height="32" StrokeThickness="4" Stroke="{Binding $parent[Button].Foreground}"/>
                    </ControlTemplate>
                  </ribbon:RibbonButton.LargeIcon>
                  <ribbon:RibbonButton.Icon>
                    <ControlTemplate>
                      <Path Data="M 1 1 L 15 15 M 15 1 L 1 15" Width="16" Height="16" StrokeThickness="2" Stroke="{Binding $parent[Button].Foreground}"/>
                    </ControlTemplate>
                  </ribbon:RibbonButton.Icon>
                </ribbon:RibbonButton>
              </ribbon:RibbonGroupBox>
            </ribbon:RibbonTab.Groups>
          </ribbon:RibbonTab>
        </ribbon:RibbonContextualTabGroup>
        <ribbon:RibbonContextualTabGroup Header="Contextual Group 2" Background="Green" IsVisible="{Binding ShowContextualGroup2}">
          <ribbon:RibbonTab Header="Test" ribbon:KeyTip.KeyTipKeys="T">
            <ribbon:RibbonTab.Groups>
              <ribbon:RibbonGroupBox Header="Another bloody group" Command="{Binding OnClickCommand}" ribbon:KeyTip.KeyTipKeys="D1">
                <ribbon:RibbonButton Content="Button 1" MinSize="Medium" ToolTip.Tip="Button 1" ribbon:KeyTip.KeyTipKeys="A" LargeIcon="{DynamicResource SlidersIconLarge}" Icon="{DynamicResource SlidersIcon}" QuickAccessIcon="{DynamicResource SlidersIcon}"/>
                <ribbon:RibbonButton Content="Button 2" MinSize="Medium" ToolTip.Tip="Button 2" ribbon:KeyTip.KeyTipKeys="B" LargeIcon="{DynamicResource Icon2Large}" Icon="{DynamicResource Icon2}" QuickAccessIcon="{DynamicResource Icon2}"/>
                <ribbon:RibbonButton Content="Button 3" MinSize="Medium" ToolTip.Tip="Button 3" ribbon:KeyTip.KeyTipKeys="C" LargeIcon="{DynamicResource Icon2Large}" Icon="{DynamicResource Icon2}" QuickAccessIcon="{DynamicResource Icon2}"/>
              </ribbon:RibbonGroupBox>
            </ribbon:RibbonTab.Groups>
          </ribbon:RibbonTab>
        </ribbon:RibbonContextualTabGroup>
        <ribbon:RibbonContextualTabGroup Header="Contextual Group 3 with a very long name" Background="Yellow" IsVisible="{Binding ShowContextualGroup3}">
          <ribbon:RibbonTab Header="lol" ribbon:KeyTip.KeyTipKeys="T">
            <ribbon:RibbonTab.Groups>
              <ribbon:RibbonGroupBox Header="lmao" Command="{Binding OnClickCommand}" ribbon:KeyTip.KeyTipKeys="D1">
                <ribbon:RibbonButton Content="no u" MinSize="Small" ToolTip.Tip="no u" ribbon:KeyTip.KeyTipKeys="N" LargeIcon="{DynamicResource SlidersIconLarge}" Icon="{DynamicResource SlidersIcon}" QuickAccessIcon="{DynamicResource SlidersIcon}"/>
              </ribbon:RibbonGroupBox>
            </ribbon:RibbonTab.Groups>
          </ribbon:RibbonTab>
        </ribbon:RibbonContextualTabGroup>
      </ribbon:Ribbon.Tabs>
    </ribbon:Ribbon>
  </ribbon:RibbonWindow.Ribbon>
  <ribbon:RibbonWindow.QuickAccessToolbar>
    <ribbon:QuickAccessToolbar>
      <ribbon:QuickAccessItem Item="{Binding #RibbonButton1}"/>
    </ribbon:QuickAccessToolbar>
  </ribbon:RibbonWindow.QuickAccessToolbar>
  <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="5">
    <Button x:Name="HorizontalRibbonButton" Content="Switch Ribbon to horizontal orientation" IsVisible="False"/>
    <Button x:Name="VerticalRibbonButton" Content="Switch Ribbon to vertical orientation"/>
    <StackPanel Orientation="Horizontal">
      <TextBlock Text="LAST ACTION: "/>
      <TextBlock Text="{Binding LastActionText}"/>
    </StackPanel>
    <CheckBox IsChecked="{Binding HasSystemDecorations, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}, Mode=TwoWay}" Content="Use System Decorations"/>
    <!--CheckBox x:Name="LightsOnCheckBox" Content="Lights" IsChecked="True"/-->
    <CheckBox IsChecked="{Binding ShowContextualGroup1}" Content="Show Contextual tab group 1"/>
    <CheckBox IsChecked="{Binding ShowContextualGroup2}" Content="Show Contextual tab group 2"/>
    <CheckBox IsChecked="{Binding ShowContextualGroup3}" Content="Show Contextual tab group 3, which has a very long name so you can easily see that its only tab's width does not prohibit the group from getting wider as needed"/>
    <!--Button x:Name="TestItemsButton" Content="Test"/-->
  </StackPanel>
</ribbon:RibbonWindow>