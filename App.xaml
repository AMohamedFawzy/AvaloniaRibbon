<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AvaloniaRibbon"
             x:Class="AvaloniaRibbon.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml"/>
        <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseLight.xaml"/>

        <StyleInclude Source="avares://AvaloniaRibbon/Views/RibbonControl.xaml"/>
        <StyleInclude Source="avares://AvaloniaRibbon/Views/RibbonTab.xaml"/>
        <StyleInclude Source="avares://AvaloniaRibbon/Views/RibbonWindow.xaml"/>
        <StyleInclude Source="avares://AvaloniaRibbon/Views/RibbonButton.xaml"/>
        <StyleInclude Source="avares://AvaloniaRibbon/Views/RibbonTabGroup.xaml"/>
    </Application.Styles>
</Application>
