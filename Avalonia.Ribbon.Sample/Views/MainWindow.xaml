<Window
    x:Class="AvaloniaRibbon.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="clr-namespace:Avalonia.Controls.Ribbon;assembly=Avalonia.Ribbon"
    xmlns:vm="clr-namespace:Avalonia.Ribbon.Sample.ViewModels;assembly=Avalonia.Ribbon.Sample"
    Title="Avalonia Ribbon"
    d:DesignHeight="450"
    d:DesignWidth="800"
    HasSystemDecorations="False"
    Icon="/Assets/avalonia-logo.ico"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <v:RibbonWindow>
        <v:RibbonControl>
            <v:RibbonTab Header="RibbonTab 1">
                <StackPanel Orientation="Horizontal">
                    <v:RibbonTabGroup Text="Un premier groupe">
                        <StackPanel Orientation="Horizontal">
                            <v:RibbonButton IconPath="/Assets/RibbonIcons/settings.png" Text="Test3" />
                            <v:RibbonButton IconPath="/Assets/RibbonIcons/corner.png" Text="Test4" />
                            <v:RibbonButton IconPath="/Assets/RibbonIcons/chevron.png" Text="Test5" />
                            <v:RibbonButton IconPath="/Assets/RibbonIcons/settings.png" Text="Test6" />
                        </StackPanel>
                    </v:RibbonTabGroup>
                    <v:RibbonTabGroup Command="{Binding OnClickCommand}" Text="Paragraphe">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Vertical">
                                <!--  Maximum 3 buttons per vertical stackpanel  -->
                                <v:RibbonLinearButton
                                    Command="{Binding OnClickCommand}"
                                    IconPath="/Assets/RibbonIcons/corner.png"
                                    Text="Reproduire la mise en forme" />
                                <v:RibbonLinearButton IconPath="/Assets/RibbonIcons/settings.png" Text="Test8" />
                                <v:RibbonLinearButton IconPath="/Assets/RibbonIcons/settings.png" Text="Test9" />
                            </StackPanel>
                            <v:RibbonComboButton IconPath="/Assets/RibbonIcons/settings.png" Text="Coller">
                                <ComboBoxItem>ksdlfml</ComboBoxItem>
                                <ComboBoxItem>ksdnvbl</ComboBoxItem>
                            </v:RibbonComboButton>
                            <StackPanel>
                                <v:RibbonSmallButtonHGroup>
                                    <v:RibbonSmallButton IconPath="/Assets/RibbonIcons/settings.png" ToolTip.Tip="A small tooltip" />
                                    <v:RibbonSmallButton IconPath="/Assets/RibbonIcons/settings.png" />
                                    <v:RibbonSmallButton IconPath="/Assets/RibbonIcons/settings.png" />
                                </v:RibbonSmallButtonHGroup>
                            </StackPanel>
                        </StackPanel>
                    </v:RibbonTabGroup>
                </StackPanel>
            </v:RibbonTab>
            <v:RibbonTab Header="RibbonTab 2">qsdfqsdf</v:RibbonTab>
        </v:RibbonControl>
    </v:RibbonWindow>

</Window>
